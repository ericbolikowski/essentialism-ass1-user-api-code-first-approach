{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "baseUrl": "./",
    "strict": true,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "skipLibCheck": true,
    "paths": {
      "@config/*": ["src/configs/*"],
      "@libs/*": ["src/libs/*"],
      "@modules/*": ["src/modules/*"]
    },
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*", "test.ts"],
  "exclude": ["src/**/*.spec.ts"]
}
